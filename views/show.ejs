  
<body class = home>

    <div class = "logout">
        <% if(username && loggedIn) { %>
            <a href="/home/"><button class = btnLogout>Home</button></a>
            <% } else  { %>
                <a href="/"><button class = btnLogout>Login</button></a>
                <% } %> 
            <p class ="homelogo">trave<span class ="logoSpan">LR </span></p>
    </div>
    <div class = showcontainer> </a>
        <div class = "cardShow">
            <div class = "title">
                <%= posts.location %>
            </div> 
            <div class ="menuBarDiv">
                <button class = testbtn><img class ="menuBar" src="/images/ellipsis.png" alt=""></button>
                <nav class="menu">
                    <ul>
                        <li class = li>
                            <button class = menuBtn>
                                <a class = "menuFont" id ="btnDelete" href="/home/<%= posts.id %>/edit">Edit Post</a> 
                            </button>
                        </li>
                        <li class = li>
                            <button class = menuBtn>
                                <form action="/<%=posts.id%>?_method=DELETE" method ="POST">
                                    <input type="submit" value="Delete" class = "menuFont" id ="btnDelete">
                                </form>
                            </button>
                        </li>
                    </ul>
                </nav>
        </div>
        <div class = "image">
            <% for (let image of posts.img) {%>
                <a href="/home/<%= posts._id %> "><img class =showImg src="<%= image.url %>" alt=""></a>
                <% } %> 
            </div>
                <div class ="captionShow">
                <%= posts.description %> 
            </div>
            
        </div>
            <div class ="commentContainer">
                <form action="/home/<%=posts._id%>/comments" method ="POST">
                        <textarea required class ="commentBox" name="comment" id="comment" cols="60" rows="4" placeholder="Add a comment..."></textarea>
                        <div class = "commentBtnContainer">
                            <button class ="btnComment">Post</button>
                        </div>
                </form>
               <% for (let comment of posts.comments) {%> 
                <div class = commentsCard>
                    <div class = usercommentsContainer>
                        <p class = commentText> <span class = "commentSpan">Comment:</span> <%= comment.comment%> </p>
                    
                        <p class = commentDate> <span class = "commentSpan">Posted:</span> <%= comment.createdAt.toLocaleDateString()%></p>
                            <div class ="menuBarDiv">
                                <button class = testbtn><img class ="menuBar" src="/images/ellipsis.png" alt=""></button>
                                <nav class="menu">
                                    <ul>
                                        <li class = li>
                                            <form action="/home/<%= posts._id%>/comments/<%=comment._id%>?_method=DELETE" method = "POST">
                                                <button class = "btnCommentDelete">Delete Comment</button>
                                            </form>
                                        </li>
                                    </ul>
                                </nav>
                        </div>
                    </div>
                </div>
            <% } %> 


        </div>

        <div id="map"></div>
        <script>
            const mapToken ='<%-process.env.MAPBOX_TOKEN%>'
            const posts = <%-JSON.stringify(posts)%>
