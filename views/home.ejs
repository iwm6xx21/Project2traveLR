


<body class = home>
    <div class = "logout">
        <% if(username && loggedIn) { %>
        <a href="/session/logout"><button class = btnLogout>Logout</button></a>
        <% } else  { %>
            <a href="/"><button class = btnLogout>Login</button></a>
            <% } %> 
        <p class ="homelogo">trave<span class ="logoSpan">LR </span></p>
    </div>
        <div class = "welcome">
            <h2 id = "homeH2">Travel Post Engage Repeat!</h2>
    
        </div>
        <div class ="postButtonContainer">
            <a href="/new"> <button class = "postButton">New Post</button>
        </div>
        <% if (username) {%> 
            <p class ="username">Hello, <span class ="usernameSpan"><%= username %>!</span></p>
        <%} %>
        <div class = homecontainer> </a>
            <% posts.forEach((post, index) => { %>
            <div class = "card">
                <div class = "title">
                    <%= post.location %>
                </div> 
                <div class ="menuBarDiv">
                    <button class = testbtn><img class ="menuBar" src="/images/ellipsis.png" alt=""></button>
                        <nav class="menu">
                            <ul>
                                <li class = li>
                                    <button class = menuBtn>
                                        <a class = "menuFont"  href="/home/<%= post._id %>">Go to post</a> 
                                    </button>
                                </li>
                                <li class = li>
                                    <button class = menuBtn>
                                        <a  class = "menuFont" href="">Coming soon</a>
                                    </button>
                                </li>
                            </ul>
                        </nav>
                </div>
                <div class = "image">
                    <a href="/home/<%= post._id %> "><img src="<%= post.img %>" alt=""></a>
        
                </div>
                <div class ="caption">
                    <%= post.description %> 
                </div>
                <div class ="timestamp">
                    Posted:<%= post.createdAt.toLocaleDateString()%> 
                </div>
                <div class ="timestamp">
                    Posted By:<%=post.user%> 
                </div>
            </div>
<%})%>
        </div>
    
</body>
